" Graphical configuration file for Vi-Improved.
"
" The setup sections should try to adhere to the order defined by the
" `:options` command. I.e.:
"      1 important
"      2 moving around, searching and patterns
"      3 tags
"      4 displaying text
"      5 syntax, highlighting and spelling
"      6 multiple windows
"      7 multiple tab pages
"      8 terminal
"      9 using the mouse
"     10 GUI
"     11 printing
"     12 messages and info
"     13 selecting text
"     14 editing text
"     15 tabs and indenting
"     16 folding
"     17 diff mode
"     18 mapping
"     19 reading and writing files
"     20 the swap file
"     21 command line editing
"     22 executing external commands
"     23 running make and jumping to errors
"     24 language specific
"     25 multi-byte characters
"     26 various


" ======================================================================
"  Settings
" ======================================================================

" ----------------------------------------------------------------------
" important
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" moving around, searching and patterns
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" tags
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" displaying text
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" syntax, highlighting and spelling
" ----------------------------------------------------------------------
set background=light
let g:solarized_visibility="low"
colorscheme solarized

" ----------------------------------------------------------------------
" multiple windows
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" multiple tab pages
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" terminal
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" using the mouse
" ----------------------------------------------------------------------
" Hide the mouse when typing text
set mousehide

" ----------------------------------------------------------------------
" GUI
" ----------------------------------------------------------------------
set guifont=Droid\ Sans\ Mono\ Slashed\ 10,
      \Inconsolata\ 12,DejaVu\ Sans\ Mono\ 10,Monospace\ 10
" Don't show tool-bar
set guioptions-=T
" Don't show menu-bar
set guioptions-=m
" Don't show scroll-bar
set guioptions-=r
" Toggle menu-bar
" If it doesn't work, you might need to delete ~/.gnome2/Vim
map <silent> <F11> :if &guioptions =~# 'm' <Bar>
			\set guioptions-=m <Bar>
			\else <Bar>
			\set guioptions+=m <Bar>
			\endif<CR>
" Toggle tool-bar
map <silent> <C-F11> :if &guioptions =~# 'T' <Bar>
			\set guioptions-=T <Bar>
			\else <Bar>
			\set guioptions+=T <Bar>
			\endif<CR>

" ----------------------------------------------------------------------
" printing
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" messages and info
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" selecting text
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
" editing text
" ----------------------------------------------------------------------

" ----------------------------------------------------------------------
